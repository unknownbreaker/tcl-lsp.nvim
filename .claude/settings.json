{
  "permissions": {
    "allow": [
      "Bash(make *)",
      "Bash(tclsh *)",
      "Bash(nvim --headless *)",
      "Bash(git *)",
      "Bash(bd *)",
      "Bash(luacheck *)",
      "Bash(stylua *)",
      "Bash(nagelfar *)",
      "Bash(chmod +x *)",
      "Bash(./scripts/*)",
      "Bash(mkdir -p *)",
      "Read(./**)",
      "Edit(./**)",
      "Write(./**)"
    ],
    "deny": [
      "Read(**/.env)",
      "Read(**/*secret*)",
      "Read(**/*credential*)"
    ]
  },
  "env": {
    "BASH_DEFAULT_TIMEOUT_MS": "120000"
  }
}
